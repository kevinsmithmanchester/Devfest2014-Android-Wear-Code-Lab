<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MyActivity">

    <TextView
        android:text="Notifications"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#ff168bff"
        android:layout_height="wrap_content" />


    <Button
        android:text="Simple Notification"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:onClick="send_simple_notification"/>

    <Button
        android:text="Big Notification"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:onClick="send_big_notification"/>


    <Button
        android:text="Multiple pages notification"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:onClick="send_pages_notification"/>

    <Button
        android:text="Notification with Action"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:onClick="send_notification_with_action"/>

    <Button
        android:text="Stacked Notification"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:onClick="send_stacked_notification"/>

</LinearLayout>
